---
interface Props {
  threshold?: number;
}

const { threshold = 300 } = Astro.props;
---

<button id="jumpToTop" class="back-to-top-button">
  <a href="#">
    <i class="fa-solid fa-caret-up fa-2xl"></i>
  </a>
</button>

<script define:vars={{ threshold }}>
  const jumpToTopButton = document.getElementById('jumpToTop');

  function handleScroll() {
    if (!jumpToTopButton) return;

    if (window.scrollY > threshold) {
      jumpToTopButton.style.opacity = '1';
    } else {
      jumpToTopButton.style.opacity = '0';
    }
  }

  window.addEventListener('scroll', handleScroll);

  if (jumpToTopButton) {
    jumpToTopButton.addEventListener('click', function(e) {
      e.preventDefault();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }
</script>

<style>
  .back-to-top-button {
    background-color: #222;
    position: fixed;
    z-index: 100;
    right: 3rem;
    bottom: 3rem;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .back-to-top-button a {
    color: #fff;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .back-to-top-button:hover {
    background-color: #333;
  }

  @media (max-width: 768px) {
    .back-to-top-button {
      right: 1.5rem;
      bottom: 1.5rem;
    }
  }
</style>
