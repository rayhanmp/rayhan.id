---
import HexGame from '@/components/HexGame';
---
<link rel="stylesheet" href="/css/normalize.css" />
<link rel="stylesheet" href="/css/skeleton.css" />
<link rel="stylesheet" href="/css/custom.css" />
<link rel="icon" type="image/png" href="/images/favicon.png" />
<link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet" />
<style>
      .back-button {
        margin-bottom: 2rem;
        display: inline-block;
        background-color: #f5f5f5;
        color: #333;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.2s ease;
      }

      .back-button:hover {
        background-color: #eaeaea;
      }
</style>
<div class="container">
  <div class="row">
    <div class="twelve columns" style="padding-top: 100px; padding-bottom: 100px;">
      <a style="margin-left: -7px; font-weight: 700; text-decoration: underline;" href="/" class="back-button">Back to Home</a>

      <h1 class="blog-title">HEX Guessing Game</h1>
      <p class="post-meta">Guess the 6-digit hex code.</p>

      <HexGame client:only />
    </div>
  </div>
</div>

